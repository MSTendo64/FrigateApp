<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FrigateApp.App"
             xmlns:local="using:FrigateApp"
             RequestedThemeVariant="Dark">
             <!-- Dark — единый тёмный интерфейс на всех ОС (на Linux при Default часто светлая тема). -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>